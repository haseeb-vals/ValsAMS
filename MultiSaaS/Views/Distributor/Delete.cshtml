@model MultiSaaS.Models.Distributor

@{
    ViewData["Title"] = "Delete Distributor";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2><i class="fa-solid fa-trash"></i> Delete Distributor</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fa-solid fa-triangle-exclamation"></i> Are you sure you want to delete this distributor? This action cannot be undone.
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="mb-3">Basic Information</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Name</dt>
                                <dd class="col-sm-8">@Model.Name</dd>
                                
                                <dt class="col-sm-4">Code</dt>
                                <dd class="col-sm-8">@Model.Code</dd>
                                
                                <dt class="col-sm-4">Description</dt>
                                <dd class="col-sm-8">@Model.Description</dd>
                                
                                <dt class="col-sm-4">Status</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-@(Model.Status == "Active" ? "success" : (Model.Status == "Inactive" ? "secondary" : "warning"))">@Model.Status</span>
                                </dd>
                            </dl>
                        </div>
                        
                        <div class="col-md-6">
                            <h4 class="mb-3">Contact Information</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@Model.Email</dd>
                                
                                <dt class="col-sm-4">Phone</dt>
                                <dd class="col-sm-8">@Model.Phone</dd>
                                
                                <dt class="col-sm-4">Website</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Website))
                                    {
                                        <a href="@Model.Website" target="_blank">@Model.Website</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <h4 class="mb-3">Address Information</h4>
                            <dl class="row">
                                <dt class="col-sm-2">Address</dt>
                                <dd class="col-sm-10">@Model.Address</dd>
                                
                                <dt class="col-sm-2">City</dt>
                                <dd class="col-sm-10">@Model.City</dd>
                                
                                <dt class="col-sm-2">State/Province</dt>
                                <dd class="col-sm-10">@Model.State</dd>
                                
                                <dt class="col-sm-2">Country</dt>
                                <dd class="col-sm-10">@Model.Country</dd>
                                
                                <dt class="col-sm-2">Postal Code</dt>
                                <dd class="col-sm-10">@Model.PostalCode</dd>
                            </dl>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-12">
                            <form asp-action="Delete" method="post">
                                <input type="hidden" asp-for="Id" />
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Dashboard" class="btn btn-secondary">
                                        <i class="fa-solid fa-arrow-left"></i> Back to Dashboard
                                    </a>
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fa-solid fa-trash"></i> Confirm Delete
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>