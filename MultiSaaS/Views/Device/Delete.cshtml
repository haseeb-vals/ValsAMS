@model MultiSaaS.Models.Device

@{
    ViewData["Title"] = "Delete Device";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fa-solid fa-triangle-exclamation"></i> Delete Device</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fa-solid fa-exclamation-circle"></i> Are you sure you want to delete this device? This action cannot be undone.
                    </div>
                    
                    <div class="device-details mb-4">
                        <h5>Device Details</h5>
                        <table class="table table-bordered">
                            <tr>
                                <th style="width: 30%">Name</th>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <th>Code</th>
                                <td>@Model.Code</td>
                            </tr>
                            <tr>
                                <th>Type</th>
                                <td>@Model.Type</td>
                            </tr>
                            <tr>
                                <th>Model</th>
                                <td>@Model.Model</td>
                            </tr>
                            <tr>
                                <th>IMEI</th>
                                <td>@Model.IMEI</td>
                            </tr>
                            <tr>
                                <th>Testing Device</th>
                                <td>@(Model.IsTestingDevice ? "Yes" : "No")</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>@Model.Status</td>
                            </tr>
                            <tr>
                                <th>Created</th>
                                <td>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm") by @Model.CreatedBy</td>
                            </tr>
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <tr>
                                    <th>Last Updated</th>
                                    <td>@Model.UpdatedAt?.ToString("yyyy-MM-dd HH:mm") by @Model.UpdatedBy</td>
                                </tr>
                            }
                        </table>
                    </div>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group text-end">
                            <a asp-controller="Distributor" asp-action="Dashboard" asp-route-id="@Model.DistributorId" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete Device</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>