@model MultiSaaS.ViewModels.SubUserViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="dashboard-container">
    <!-- Mobile Menu Toggle Button (visible on small screens) -->
    <button id="mobileMenuToggle" class="mobile-menu-toggle">
        <i class="fa-solid fa-bars"></i>
    </button>
    
    <!-- Sidebar -->
    <div id="sidebar" class="sidebar expanded">
        <div class="sidebar-header">
            <i class="fa-solid fa-layer-group logo-icon"></i>
            <span class="logo-text">MultiSaaS</span>
            <button id="pinSidebar" class="pin-btn" title="Pin Sidebar">
                <i class="fa-solid fa-thumbtack"></i>
            </button>
        </div>
        
        <div class="sidebar-menu">
            <a href="#" class="menu-item active" data-page="dashboard">
                <i class="fa-solid fa-gauge-high"></i>
                <span>Dashboard</span>
            </a>
            <a href="#" class="menu-item" data-page="parent-user">
                <i class="fa-solid fa-user-tie"></i>
                <span>Parent User</span>
            </a>
            <a href="#" class="menu-item" data-page="profile">
                <i class="fa-solid fa-user"></i>
                <span>Profile</span>
            </a>
            <a href="#" class="menu-item" data-page="settings">
                <i class="fa-solid fa-gear"></i>
                <span>Settings</span>
            </a>
        </div>
        
        <div class="sidebar-footer">
            <button id="logoutBtn" title="Logout">
                <i class="fa-solid fa-right-from-bracket"></i>
                <span>Logout</span>
            </button>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content sidebar-expanded" id="mainContent">
        <!-- Dashboard Page -->
        <div class="page-content active" id="dashboard-page">
            <div class="page-header">
                <h1>Sub User Dashboard</h1>
                <p>Welcome, @Model.FirstName! Manage your account and view your information here.</p>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="dashboard-card">
                        <h2><i class="fa-solid fa-tasks"></i> Assigned Tasks</h2>
                        <div class="dashboard-card-content">
                            <div class="stat-value">12</div>
                            <p>Total assigned tasks</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="dashboard-card">
                        <h2><i class="fa-solid fa-check-circle"></i> Completed</h2>
                        <div class="dashboard-card-content">
                            <div class="stat-value">8</div>
                            <p>Tasks completed successfully</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="dashboard-card">
                        <h2><i class="fa-solid fa-clock"></i> Pending</h2>
                        <div class="dashboard-card-content">
                            <div class="stat-value">4</div>
                            <p>Tasks awaiting completion</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-8">
                    <div class="dashboard-card">
                        <h2><i class="fa-solid fa-user"></i> Sub User Information</h2>
                        <div class="dashboard-card-content">
                            <div class="profile-info">
                                <div class="profile-info-row">
                                    <div class="profile-info-name">Full Name</div>
                                    <div class="profile-info-value">@Model.FirstName @Model.LastName</div>
                                </div>
                                <div class="profile-info-row">
                                    <div class="profile-info-name">Username</div>
                                    <div class="profile-info-value">@Model.Username</div>
                                </div>
                                <div class="profile-info-row">
                                    <div class="profile-info-name">Email</div>
                                    <div class="profile-info-value">@Model.Email</div>
                                </div>
                                <div class="profile-info-row">
                                    <div class="profile-info-name">Role</div>
                                    <div class="profile-info-value">@Model.Role</div>
                                </div>
                                <div class="profile-info-row">
                                    <div class="profile-info-name">Status</div>
                                    <div class="profile-info-value"><span class="status-badge status-active">@Model.Status</span></div>
                                </div>
                            </div>
                            <div class="mt-3">
                                <a href="#" class="btn btn-primary">View Full Profile</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row mt-4">
                    <div class="col-md-4">
                    <div class="dashboard-card">
                        <h2><i class="fa-solid fa-bolt"></i> Quick Actions</h2>
                        <div class="dashboard-card-content">
                            <div class="quick-actions">
                                <a href="#" class="quick-action-item">
                                    <i class="fa-solid fa-tasks"></i>
                                    <span>View Tasks</span>
                                </a>
                                <a href="#" class="quick-action-item">
                                    <i class="fa-solid fa-envelope"></i>
                                    <span>Messages</span>
                                </a>
                                <a href="#" class="quick-action-item">
                                    <i class="fa-solid fa-cog"></i>
                                    <span>Settings</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="dashboard-card">
                    <h2><i class="fa-solid fa-bell"></i> Recent Activity</h2>
                    <div class="dashboard-card-content">
                        <div class="activity-list">
                            <div class="activity-item">
                                <div class="activity-icon bg-primary">
                                    <i class="fa-solid fa-tasks"></i>
                                </div>
                                <div class="activity-details">
                                    <h4>New Task Assigned</h4>
                                    <p>You have been assigned a new task: "Complete project documentation"</p>
                                    <span class="activity-time">2 hours ago</span>
                                </div>
                            </div>
                            <div class="activity-item">
                                <div class="activity-icon bg-success">
                                    <i class="fa-solid fa-check-circle"></i>
                                </div>
                                <div class="activity-details">
                                    <h4>Task Completed</h4>
                                    <p>You marked task "Update client information" as complete</p>
                                    <span class="activity-time">Yesterday</span>
                                </div>
                            </div>
                            <div class="activity-item">
                                <div class="activity-icon bg-info">
                                    <i class="fa-solid fa-comments"></i>
                                </div>
                                <div class="activity-details">
                                    <h4>New Message</h4>
                                    <p>You received a new message from Admin</p>
                                    <span class="activity-time">3 days ago</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            <!-- Profile Page -->
            <div class="content-page" id="profile-page">
                <div class="row">
                    <div class="col-12 mb-4">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h4 class="mb-0">Sub User Profile</h4>
                                <button class="btn btn-sm btn-primary" data-page="settings">
                                    <i class="fa-solid fa-edit me-1"></i> Edit Profile
                                </button>
                            </div>
                            <div class="card-body">
                                <div class="row g-4">
                                    <div class="col-md-4 text-center">
                                        <div class="profile-image mb-3">
                                            <div class="avatar-circle mx-auto">
                                                <i class="fa-solid fa-user fa-5x"></i>
                                            </div>
                                        </div>
                                        <h4 class="mb-1">@Model.FirstName @Model.LastName</h4>
                                        <p class="text-muted">@Model.Username</p>
                                        <div class="mt-3">
                                            <span class="badge bg-success fs-6 px-3 py-2">@Model.Status</span>
                                        </div>
                                        <div class="mt-4">
                                            <span class="badge bg-primary fs-6 px-3 py-2">@Model.Role</span>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card">
                                            <div class="card-header bg-light">
                                                <h5 class="mb-0">Personal Information</h5>
                                            </div>
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-sm-6 mb-3">
                                                        <div class="info-group">
                                                            <label class="info-label d-block text-muted small">First Name</label>
                                                            <div class="info-value fs-5">@Model.FirstName</div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-6 mb-3">
                                                        <div class="info-group">
                                                            <label class="info-label d-block text-muted small">Last Name</label>
                                                            <div class="info-value fs-5">@Model.LastName</div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-6 mb-3">
                                                        <div class="info-group">
                                                            <label class="info-label d-block text-muted small">Email Address</label>
                                                            <div class="info-value fs-5">@Model.Email</div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-6 mb-3">
                                                        <div class="info-group">
                                                            <label class="info-label d-block text-muted small">Phone Number</label>
                                                            <div class="info-value fs-5">@(string.IsNullOrEmpty(Model.Phone) ? "Not provided" : Model.Phone)</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <hr class="my-3">
                                                <div class="row">
                                                    <div class="col-sm-6 mb-3">
                                                        <div class="info-group">
                                                            <label class="info-label d-block text-muted small">Account Created</label>
                                                            <div class="info-value">@Model.CreatedAt.ToString("MMM dd, yyyy")</div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-6 mb-3">
                                                        <div class="info-group">
                                                            <label class="info-label d-block text-muted small">Last Updated</label>
                                                            <div class="info-value">@(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("MMM dd, yyyy") : "Not updated yet")</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="card mt-4">
                                            <div class="card-header bg-light">
                                                <h5 class="mb-0">Parent User</h5>
                                            </div>
                                            <div class="card-body">
                                                <div class="d-flex align-items-center">
                                                    <div class="icon-box bg-primary text-white rounded-circle p-3 me-3">
                                                        <i class="fa-solid fa-user-tie"></i>
                                                    </div>
                                                    <div>
                                                        <h5 class="mb-1">@Model.User.FirstName @Model.User.LastName</h5>
                                                        <p class="text-muted mb-0">@Model.User.Email</p>
                                                    </div>
                                                    <div class="ms-auto">
                                                        <button class="btn btn-outline-primary" data-page="parent-user">
                                                            View Details
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Parent User Page -->
            <div class="content-page" id="parent-user-page">
                <div class="row">
                    <div class="col-12 mb-4">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                                <h4 class="mb-0">Parent User Information</h4>
                                <button class="btn btn-sm btn-outline-secondary" data-page="dashboard">
                                    <i class="fa-solid fa-arrow-left me-1"></i> Back to Dashboard
                                </button>
                            </div>
                            <div class="card-body">
                                @if (Model.User != null)
                                {
                                    <div class="row">
                                        <div class="col-md-4 text-center mb-4 mb-md-0">
                                            <div class="avatar-circle mx-auto mb-3" style="width: 120px; height: 120px;">
                                                <i class="fa-solid fa-user-tie fa-5x"></i>
                                            </div>
                                            <h4>@Model.User.FirstName @Model.User.LastName</h4>
                                            <p class="text-muted">@Model.User.Username</p>
                                            <div class="mt-3">
                                                <span class="badge bg-success px-3 py-2">Active</span>
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="card">
                                                <div class="card-header bg-light">
                                                    <h5 class="mb-0">Contact Information</h5>
                                                </div>
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-sm-6 mb-3">
                                                            <div class="info-group">
                                                                <label class="info-label d-block text-muted small">First Name</label>
                                                                <div class="info-value fs-5">@Model.User.FirstName</div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6 mb-3">
                                                            <div class="info-group">
                                                                <label class="info-label d-block text-muted small">Last Name</label>
                                                                <div class="info-value fs-5">@Model.User.LastName</div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6 mb-3">
                                                            <div class="info-group">
                                                                <label class="info-label d-block text-muted small">Email Address</label>
                                                                <div class="info-value fs-5">@Model.User.Email</div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6 mb-3">
                                                            <div class="info-group">
                                                                <label class="info-label d-block text-muted small">Phone Number</label>
                                                                <div class="info-value fs-5">@(string.IsNullOrEmpty(Model.User.Phone) ? "Not provided" : Model.User.Phone)</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="card mt-4">
                                                <div class="card-header bg-light">
                                                    <h5 class="mb-0">Relationship</h5>
                                                </div>
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-sm-6 mb-3">
                                                            <div class="info-group">
                                                                <label class="info-label d-block text-muted small">Your Role</label>
                                                                <div class="info-value fs-5">@Model.Role</div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6 mb-3">
                                                            <div class="info-group">
                                                                <label class="info-label d-block text-muted small">Added On</label>
                                                                <div class="info-value fs-5">@Model.CreatedAt.ToString("MMM dd, yyyy")</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <p>No parent user information available.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Settings Page -->
            <div class="content-page" id="settings-page">
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="mb-0">Account Settings</h3>
                            <button class="btn btn-outline-primary" data-page="profile">
                                <i class="fa-solid fa-user me-1"></i> View Profile
                            </button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-7 mb-4">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">Update Profile Information</h5>
                            </div>
                            <div class="card-body">
                                <form asp-action="UpdateProfile" asp-controller="SubUser" method="post" class="user-settings-form ajax-form needs-validation">
                                    <input type="hidden" name="Id" value="@Model.Id" />
                                    <input type="hidden" name="UserId" value="@Model.UserId" />
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <div class="form-group">
                                                <label for="firstName" class="form-label">First Name</label>
                                                <input type="text" class="form-control" id="firstName" name="FirstName" value="@Model.FirstName" required>
                                                <div class="invalid-feedback">Please enter your first name.</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <div class="form-group">
                                                <label for="lastName" class="form-label">Last Name</label>
                                                <input type="text" class="form-control" id="lastName" name="LastName" value="@Model.LastName" required>
                                                <div class="invalid-feedback">Please enter your last name.</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <div class="form-group">
                                                <label for="email" class="form-label">Email</label>
                                                <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" required>
                                                <div class="invalid-feedback">Please enter a valid email address.</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <div class="form-group">
                                                <label for="username" class="form-label">Username</label>
                                                <input type="text" class="form-control" id="username" name="Username" value="@Model.Username" required>
                                                <div class="invalid-feedback">Please enter a username.</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <div class="form-group">
                                                <label for="phone" class="form-label">Phone</label>
                                                <input type="tel" class="form-control" id="phone" name="Phone" value="@Model.Phone">
                                                <div class="invalid-feedback">Please enter a valid phone number.</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <div class="form-group">
                                                <label for="role" class="form-label">Role</label>
                                                <input type="text" class="form-control bg-light" id="role" name="Role" value="@Model.Role">
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="my-4">
                                    <h5>Change Password</h5>
                                    <div class="mb-3">
                                        <label for="currentPassword" class="form-label">Current Password</label>
                                        <input type="password" class="form-control" id="currentPassword" name="CurrentPassword">
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="newPassword" class="form-label">New Password</label>
                                            <input type="password" class="form-control" id="newPassword" name="NewPassword">
                                            <small class="form-text text-muted">Password must be at least 8 characters with uppercase, lowercase, number, and special character</small>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                            <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword">
                                        </div>
                                    </div>
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                        <button type="submit" class="btn btn-primary px-4">
                                            <i class="fa-solid fa-save me-2"></i>Save Changes
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 mb-4">
                        <div class="card border-0 shadow-sm mt-4">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">Account Security</h5>
                            </div>
                            <div class="card-body">
                                <div class="security-tip mb-3">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fa-solid fa-shield-alt text-primary me-2"></i>
                                        <h6 class="mb-0">Password Tips</h6>
                                    </div>
                                    <p class="text-muted small mb-0">Use a strong password that includes uppercase letters, lowercase letters, numbers, and special characters.</p>
                                </div>
                                <div class="security-tip">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fa-solid fa-user-lock text-primary me-2"></i>
                                        <h6 class="mb-0">Account Protection</h6>
                                    </div>
                                    <p class="text-muted small mb-0">Change your password regularly and never share it with others.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize dashboard functionality
            initDashboard();
        });
    </script>
}