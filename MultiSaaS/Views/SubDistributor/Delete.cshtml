@model MultiSaaS.ViewModels.SubDistributorViewModel

@{
    ViewData["Title"] = "Delete Sub-Distributor";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2><i class="fa-solid fa-trash"></i> Delete Sub-Distributor</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fa-solid fa-triangle-exclamation"></i> Are you sure you want to delete this sub-distributor? This action cannot be undone.
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="mb-3">Basic Information</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Name</dt>
                                <dd class="col-sm-8">@Model.SubDistributor.Name</dd>
                                
                                <dt class="col-sm-4">Code</dt>
                                <dd class="col-sm-8">@Model.SubDistributor.Code</dd>
                                
                                <dt class="col-sm-4">Status</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-@(Model.SubDistributor.Status == "Active" ? "success" : (Model.SubDistributor.Status == "Inactive" ? "secondary" : "warning"))">@Model.SubDistributor.Status</span>
                                </dd>
                            </dl>
                        </div>
                        
                        <div class="col-md-6">
                            <h4 class="mb-3">Parent Distributor</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Name</dt>
                                <dd class="col-sm-8">@(Model.ParentDistributor?.Name ?? "N/A")</dd>
                                
                                <dt class="col-sm-4">Code</dt>
                                <dd class="col-sm-8">@(Model.ParentDistributor?.Code ?? "N/A")</dd>
                            </dl>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <h4 class="mb-3">Contact Information</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@Model.SubDistributor.Email</dd>
                                
                                <dt class="col-sm-4">Phone</dt>
                                <dd class="col-sm-8">@Model.SubDistributor.Phone</dd>
                                
                                <dt class="col-sm-4">Website</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.SubDistributor.Website))
                                    {
                                        <a href="@Model.SubDistributor.Website" target="_blank">@Model.SubDistributor.Website</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        
                        <div class="col-md-6">
                            <h4 class="mb-3">Address Information</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Address</dt>
                                <dd class="col-sm-8">@Model.SubDistributor.Address</dd>
                                
                                <dt class="col-sm-4">City</dt>
                                <dd class="col-sm-8">@Model.SubDistributor.City</dd>
                                
                                <dt class="col-sm-4">State/Province</dt>
                                <dd class="col-sm-8">@Model.SubDistributor.State</dd>
                                
                                <dt class="col-sm-4">Country</dt>
                                <dd class="col-sm-8">@Model.SubDistributor.Country</dd>
                                
                                <dt class="col-sm-4">Postal Code</dt>
                                <dd class="col-sm-8">@Model.SubDistributor.PostalCode</dd>
                            </dl>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-12">
                            <form asp-action="Delete" method="post">
                                <input type="hidden" name="Id" value="@Model.SubDistributor.Id" />
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Dashboard" class="btn btn-secondary">
                                        <i class="fa-solid fa-arrow-left"></i> Back to Dashboard
                                    </a>
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fa-solid fa-trash"></i> Confirm Delete
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>