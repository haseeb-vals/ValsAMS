@model MultiSaaS.Models.User

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="dashboard-container">
    <!-- Mobile Menu Toggle Button (visible on small screens) -->
    <button id="mobileMenuToggle" class="mobile-menu-toggle">
        <i class="fa-solid fa-bars"></i>
    </button>
    
    <!-- Sidebar -->
    <div id="sidebar" class="sidebar expanded">
        <div class="sidebar-header">
            <i class="fa-solid fa-layer-group logo-icon"></i>
            <span class="logo-text">MultiSaaS</span>
            <button id="pinSidebar" class="pin-btn" title="Pin Sidebar">
                <i class="fa-solid fa-thumbtack"></i>
            </button>
        </div>
        
        <div class="sidebar-menu">
            <a href="#" class="menu-item active" data-page="dashboard">
                <i class="fa-solid fa-gauge-high"></i>
                <span>Dashboard</span>
            </a>
            <a href="#" class="menu-item" data-page="profile">
                <i class="fa-solid fa-user"></i>
                <span>Profile</span>
            </a>
            <a href="#" class="menu-item" data-page="settings">
                <i class="fa-solid fa-gear"></i>
                <span>Settings</span>
            </a>
        </div>
        
        <div class="sidebar-footer">
            <button id="logoutBtn" title="Logout">
                <i class="fa-solid fa-right-from-bracket"></i>
                <span>Logout</span>
            </button>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content sidebar-expanded" id="mainContent">
        <!-- Dashboard Page -->

        <div class="page-content active" id="dashboard-page">
            <div class="page-header">
                <h1>User Dashboard</h1>
                <p>Welcome, @Model.FirstName! Manage your account and view your information here.</p>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="dashboard-card">
                        <h2><i class="fa-solid fa-users"></i> Total Users</h2>
                        <div class="dashboard-card-content">
                            <div class="stat-value">24</div>
                            <p>Active users in system</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="dashboard-card">
                        <h2><i class="fa-solid fa-diagram-project"></i> Active Projects</h2>
                        <div class="dashboard-card-content">
                            <div class="stat-value">7</div>
                            <p>Current active projects</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="dashboard-card">
                        <h2><i class="fa-solid fa-clipboard-list"></i> Pending Tasks</h2>
                        <div class="dashboard-card-content">
                            <div class="stat-value">12</div>
                            <p>Tasks awaiting completion</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-8">
                    <div class="dashboard-card">
                        <h2><i class="fa-solid fa-user"></i> User Information</h2>
                        <div class="dashboard-card-content">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="profile-field">
                                        <label>Username:</label>
                                        <span>@Model.Username</span>
                                    </div>
                                    <div class="profile-field">
                                        <label>Email:</label>
                                        <span>@Model.Email</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="profile-field">
                                        <label>Status:</label>
                                        <span><span class="badge bg-success">@Model.Status</span></span>
                                    </div>
                                    <div class="profile-field">
                                        <label>Created:</label>
                                        <span>@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-primary" data-page="profile">View Full Profile</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="dashboard-card">
                        <h2><i class="fa-solid fa-bell"></i> Recent Activity</h2>
                        <div class="dashboard-card-content">
                            <ul class="notification-list">
                                <li><i class="fa-solid fa-sign-in-alt"></i> You logged in from a new device (2 hours ago)</li>
                                <li><i class="fa-solid fa-check"></i> You completed Project X (Yesterday)</li>
                                <li><i class="fa-solid fa-exclamation"></i> Your subscription will expire soon (3 days ago)</li>
                            </ul>
                        </div>
                    </div>
                </div>
                </div>
            </div>

            <!-- Profile Page -->
            <div class="content-page" id="profile-page">
                <div class="row">
                    <div class="col-12 mb-4">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h4 class="mb-0">User Profile</h4>
                                <button class="btn btn-sm btn-primary" data-page="settings">
                                    <i class="fa-solid fa-edit me-1"></i> Edit Profile
                                </button>
                            </div>
                            <div class="card-body">
                                <div class="row g-4">
                                    <div class="col-md-4 text-center">
                                        <div class="profile-image mb-3">
                                            <div class="avatar-circle mx-auto">
                                                <i class="fa-solid fa-user fa-5x"></i>
                                            </div>
                                        </div>
                                        <h4 class="mb-1">@Model.FirstName @Model.LastName</h4>
                                        <p class="text-muted">@Model.Username</p>
                                        <div class="mt-3">
                                            <span class="badge bg-success fs-6 px-3 py-2">@Model.Status</span>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card">
                                            <div class="card-header bg-light">
                                                <h5 class="mb-0">Personal Information</h5>
                                            </div>
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-sm-6 mb-3">
                                                        <div class="info-group">
                                                            <label class="info-label d-block text-muted small">First Name</label>
                                                            <div class="info-value fs-5">@Model.FirstName</div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-6 mb-3">
                                                        <div class="info-group">
                                                            <label class="info-label d-block text-muted small">Last Name</label>
                                                            <div class="info-value fs-5">@Model.LastName</div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-6 mb-3">
                                                        <div class="info-group">
                                                            <label class="info-label d-block text-muted small">Email Address</label>
                                                            <div class="info-value fs-5">@Model.Email</div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-6 mb-3">
                                                        <div class="info-group">
                                                            <label class="info-label d-block text-muted small">Phone Number</label>
                                                            <div class="info-value fs-5">@(string.IsNullOrEmpty(Model.Phone) ? "Not provided" : Model.Phone)</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <hr class="my-3">
                                                <div class="row">
                                                    <div class="col-sm-6 mb-3">
                                                        <div class="info-group">
                                                            <label class="info-label d-block text-muted small">Account Created</label>
                                                            <div class="info-value">@Model.CreatedAt.ToString("MMM dd, yyyy")</div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-6 mb-3">
                                                        <div class="info-group">
                                                            <label class="info-label d-block text-muted small">Last Updated</label>
                                                            <div class="info-value">@(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("MMM dd, yyyy") : "Not updated yet")</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Settings Page -->
            <div class="content-page" id="settings-page">
                <div class="row">
                    <div class="col-12 mb-4">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h4 class="mb-0">Account Settings</h4>
                                <button class="btn btn-sm btn-outline-secondary" data-page="profile">
                                    <i class="fa-solid fa-user me-1"></i> View Profile
                                </button>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-8">
                                        <form id="user-settings-form" class="ajax-form" data-success-message="Profile updated successfully!" data-error-message="Failed to update profile.">
                                            <div class="row g-3">
                                                <div class="col-md-6">
                                                    <div class="form-group mb-3">
                                                        <label for="firstName" class="form-label">First Name</label>
                                                        <input type="text" class="form-control" id="firstName" name="FirstName" value="@Model.FirstName" required>
                                                        <div class="invalid-feedback">Please enter your first name.</div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group mb-3">
                                                        <label for="lastName" class="form-label">Last Name</label>
                                                        <input type="text" class="form-control" id="lastName" name="LastName" value="@Model.LastName" required>
                                                        <div class="invalid-feedback">Please enter your last name.</div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group mb-3">
                                                        <label for="email" class="form-label">Email</label>
                                                        <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" required>
                                                        <div class="invalid-feedback">Please enter a valid email address.</div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group mb-3">
                                                        <label for="username" class="form-label">Username</label>
                                                        <input type="text" class="form-control" id="username" name="Username" value="@Model.Username" required>
                                                        <div class="invalid-feedback">Please enter a username.</div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group mb-3">
                                                        <label for="phone" class="form-label">Phone</label>
                                                        <input type="tel" class="form-control" id="phone" name="Phone" value="@Model.Phone">
                                                        <div class="invalid-feedback">Please enter a valid phone number.</div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                                <button type="reset" class="btn btn-outline-secondary me-md-2">Reset</button>
                                                <button type="submit" class="btn btn-primary">Update Profile</button>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="col-lg-4 mt-4 mt-lg-0">
                                        <div class="card border">
                                            <div class="card-header bg-light">
                                                <h5 class="mb-0">Change Password</h5>
                                            </div>
                                            <div class="card-body">
                                                <form id="change-password-form" class="ajax-form" data-success-message="Password changed successfully!" data-error-message="Failed to change password.">
                                                    <div class="form-group mb-3">
                                                        <label for="currentPassword" class="form-label">Current Password</label>
                                                        <input type="password" class="form-control" id="currentPassword" name="CurrentPassword" required>
                                                        <div class="invalid-feedback">Please enter your current password.</div>
                                                    </div>
                                                    <div class="form-group mb-3">
                                                        <label for="newPassword" class="form-label">New Password</label>
                                                        <input type="password" class="form-control" id="newPassword" name="NewPassword" required>
                                                        <div class="invalid-feedback">Please enter a new password.</div>
                                                    </div>
                                                    <div class="form-group mb-3">
                                                        <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                                        <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" required>
                                                        <div class="invalid-feedback">Passwords do not match.</div>
                                                    </div>
                                                    <div class="d-grid gap-2 mt-4">
                                                        <button type="submit" class="btn btn-primary">Change Password</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize dashboard functionality
            initDashboard();
        });
    </script>
}